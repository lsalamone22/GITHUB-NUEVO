@model webapp.Models.Calculadora

<div class="text-center">
    <h1 class="display-4">Calculadora</h1>
    <form asp-controller="Calculadora" asp-action="Calcular">
        <input asp-for="Operador1" class="form-control" />
        <input asp-for="Operador2" class="form-control" />
        <select asp-for="Operando" class="form-control" >
            <option value="+">Suma</option>
            <option value="-">Resta</option>
            <option value="*">Multiplica</option>
            <option value="/">Divide</option>
        </select>
        <button type="submit" class="btn btn-primary">Calcular</button> 
    </form>
    <h1>@ViewData["Message"]</h1>
</div>